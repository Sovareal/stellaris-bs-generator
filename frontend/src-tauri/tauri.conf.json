{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Stellaris BS Generator",
  "version": "0.1.0",
  "identifier": "com.stellaris.bs-generator",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "call ..\\gradlew.bat -p .. :backend:bootJar && copy /Y ..\\backend\\build\\libs\\backend-0.1.0.jar src-tauri\\backend.jar && call ..\\scripts\\bundle-jre.bat && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Stellaris BS Empire Generator",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "resources": [
      "backend.jar",
      "jre/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
